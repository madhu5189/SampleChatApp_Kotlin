<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/to_chat_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/white"
        android:maxWidth="260dp"
        android:layout_marginStart="10dp"
        tools:text="hello"
        app:layout_constraintStart_toEndOf="@id/to_chat_image_view"
        app:layout_constraintTop_toTopOf="@id/to_chat_image_view"
        app:layout_constraintBottom_toBottomOf="@id/to_chat_image_view"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/to_chat_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

</androidx.constraintlayout.widget.ConstraintLayout>